{{#if user}}

<div class="container p-6">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>SignUp</h3>
        </div>
        <div class="card-body">
          
          <form action="/signup" method="POST">
             <div class="form-group">
              <input type="text" name="adviser_username" placeholder="Username" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <select name="adviser_role" class="form-control" placeholder="Rol">
                  <option value="value2" selected disabled>Rol</option>
                  <option value="adviser" >Adviser</option>
                  <option value="admin">Admin</option>
              </select>
            </div>
            <div class="form-group">
              <input type="text" name="adviser_name" placeholder="Name" class="form-control" >
            </div>
            <div class="form-group">
              <input type="text" name="adviser_lastname" placeholder="Lastname" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="adviser_rut" placeholder="Rut" class="form-control">
            </div>
            <div class="form-group">
              <input type="date" data-date-format="YYYY MMMM DD" name="adviser_birthday" placeholder="Birthday" class="form-control">
            </div>
            <div class="form-group">
              <input type="email" name="adviser_email" placeholder="E-mail" class="form-control">
            </div>
            <div class="form-group">
              <input type="tel" name="adviser_phone" placeholder="Phone" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" id="adviser_password" name="adviser_password" placeholder="Password" class="form-control" onkeyup="checkpassword();" onfocus="checkpassword();">
            </div>
            <div class="form-group">
              <input type="password" id="adviser_repassword" name="adviser_repassword" placeholder="Confirm Password" class="form-control" onkeyup="checkpassword();" onfocus="checkpassword();" >
            </div>
            <div id="cont"></div>
            <div class="form-group">
              <button class="btn btn-success btn-block" id="bsubmit" disabled="true">
                SingIn
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{{else}}
{{/if}}
