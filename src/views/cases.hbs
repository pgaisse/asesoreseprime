<div class="container p-4">

    <div class="row">

        <div class="col-md-10 mx-auto">
                    <div class="row" align="left">
            <h4>Pre-Casos</h4>


            <br />

        </div>
            {{#each resultsClients as |c|}}

            <div class="card " style="margin-bottom: 10px; padding-right: 10px; background-color: #e3dcff;">
                <div class="text-end mr-1"><a href="/addCase?id_client={{c.id_client}}&ts={{indicent_type}}"><i
                            class="fa-solid fa-file-circle-plus"></i></a>&nbsp <a href=""><i
                            class="fa-solid fa-trash-can text-dark"></i></a></div>
                <div class="card-body">

                    <h5 class="card-title" style="margin-top: 1px;"> {{c.client_name}} {{c.client_lastname}}</h5>

                    <p class="card-text text-start">
                    <div class="w-100 text-start">
                        <b> Número de caso: </b> {{c.numero_caso}}
                    </div>
                    <div class="w-100 text-start">
                        <b> Rut cliente: </b> {{c.client_rut}}
                    </div>
                    <div class=" w-100 text-start">
                        <b>Tipo de siniestro: </b>{{c.indicent_type}}
                    </div>
                    <div class="w-100 text-start">
                        <b>Dirección: </b>{{c.client_address}}
                    </div>

                    </p>


                    <p class="card-text">



                    </p>
                </div>
            </div>
            {{/each}}
            <div class="row" align="left">
                <h4>Lista de Casos</h4>


                <br />

            </div>
            <div class="card text-start" style="margin-bottom: 5px; padding-right: 10px; ">
                <h5 class="card-title" style="margin-top: 1px;"><a href="#form3" class="form-control  border-0"
                        id="toggleButton">Buscar</a></h5>
                <form action="/cases"  method="POST" id="form_submit">
                    <div class="card-body" id="form3">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">

                                <select name="search_type" class="form-control rounded-0 shadow-none text-start" >
                                    <option value="asesoresprime_web.6Scr5XN_clientes.numero_caso" selected> Número del caso</option>
                                    <option value="advises.adviser_name">Nombre asesor</option>
                                    <option value="clients.client_name">Nombre de cliente</option>

                                </select>
                            </div>
                            <input type="text" class="form-control shadow-none"
                                aria-label="Text input with dropdown button" name="search_body">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="submit"
                                    id="button-addon2">Buscar</button> 
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon3">Estado del caso</span>
                            </div>
                            <select name="search_status" class="form-control rounded-0 shadow-none text-start">
                                <option value="0" selected>Todos </option>
                                {{#statusFields}}
                                <option value="{{id_status}}">{{status_name}} </option>
                                {{/statusFields}}

                            </select>
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon3">Inicio</span>
                            </div>
                            <input type="date" class="form-control shadow-none"
                             name="search_start">

                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon3">Fin</span>
                            </div>
                            <input type="date" class="form-control shadow-none" name="search_end">


                        </div>
                        <input type="hidden" name="table_name" id="table_name" , value="advisers" class="form-control">
                </form>
            </div>
        </div>





        {{#each cases}}
        <div class="card" style="margin-bottom: 10px; padding-right: 10px; background-color: #faefd7;">

            <div class="text-end mr-1"><a href="/cases_crud?id_case={{this.id_case}}"><i
                        class="fa-solid fa-glasses"></i></a></div>

            <div class="card-body">
                <h5 class="card-title">{{this.client_name}} {{this.client_lastname}}</h5>
                <h5 class="card-title">({{this.status_name}})</h5>
                <p class="card-text">



                <div class="w-100 text-start">
                    <b> Número de caso: </b> {{this.numero_caso}}
                </div>
                <div class="w-100 text-start">
                    <b> Fecha del caso: </b> {{this.case_date}}
                </div>
                <div class="w-100 text-start">
                    <b> Rut cliente: </b> {{this.client_rut}}
                </div>
                <div class=" w-100 text-start">
                    <b>Tipo de siniestro: </b>{{this.incident_type}}
                </div>
                <div class="w-100 text-start">
                    <b>Dirección: </b>{{this.client_address}}
                </div>


                {{#if this.adviser_name}}
                <div class="w-100 text-start text-capitalize">
                    <b>Asesor: </b> {{this.adviser_name}} {{this.adviser_lastname}}
                </div>
                {{else}}
                <div class="w-100">
                    <p class=" text-center text-danger fw-bold">Caso sin Asignar </p>
                </div>

                {{/if}}




                </p>
            </div>
        </div>
        {{/each}}



    </div>

</div>
</div>

<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.isotope/3.0.6/isotope.pkgd.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.js"></script>