


{{#if user}}
{{else}}
<div class="container p-4">
  <div class="row">

    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Ingresar</h3>
        </div>
        <img src="/img/logo_p.png" alt="Logo" class="card-img-top mx-auto m-2 circle w-50 h-50">
        <div class="card-body">
          <form action="/signin" method="POST">
            <div class="form-group">
              <input type="text" name="adviser_username" placeholder="Username" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="password" name="adviser_password" placeholder="Password" class="form-control">
            </div>
            <button class="btn btn-primary btn-block">
              Ingresar
            </button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}